{
  "mcpServers": {
    "canvas-student-mcp": {
      "command": "python3",
      "args": [
        "/absolute/path/to/canvas-student-mcp-server/packages/canvas-student-mcp-server/app.py"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": "/absolute/path/to/canvas-student-mcp-server/packages/canvas-student-mcp-server/src",
        "CANVAS_API_KEY": "your_canvas_api_token_here",
        "CANVAS_BASE_URL": "https://your-institution.instructure.com"
      }
    }
  }
}
